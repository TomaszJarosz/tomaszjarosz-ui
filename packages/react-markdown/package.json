{
  "name": "@tomaszjarosz/react-markdown",
  "version": "0.1.0",
  "description": "Enhanced markdown components for React - code blocks, callouts, diagrams",
  "author": "Tomasz Jarosz <tomaszjarosz1994@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomaszjarosz/tomaszjarosz-ui.git",
    "directory": "packages/react-markdown"
  },
  "keywords": [
    "react",
    "markdown",
    "code-block",
    "syntax-highlighting",
    "callout",
    "mermaid",
    "diagram",
    "collapsible"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "*.css"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0"
  },
  "dependencies": {
    "highlight.js": "^11.11.0",
    "isomorphic-dompurify": "^2.21.0",
    "lowlight": "^3.2.0",
    "lucide-react": "^0.468.0",
    "mermaid": "^11.4.0",
    "prism-react-renderer": "^2.4.1"
  }
}
